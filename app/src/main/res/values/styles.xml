<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--自定义属性 -->
    <declare-styleable name="ItemEditTextStyle">
        <attr name="labelTextColor" format="color"></attr>
        <attr name="hintTextColor" format="color"></attr>
        <attr name="isNumber" format="boolean"></attr>
        <attr name="toLeftGravity" format="boolean"></attr>
        <attr name="isEdit" format="boolean"></attr>
        <attr name="labelText" format="reference|string"></attr>
        <attr name="hintText" format="reference|string"></attr>
        <attr name="editText" format="reference|string"></attr>
        <attr name="editTextColor" format="color"></attr>
        <attr name="maxLength" format="integer"></attr>
        <attr name="lines" format="integer"></attr>
        <attr name="digits" format="reference|string"></attr>
    </declare-styleable>
</resources>
